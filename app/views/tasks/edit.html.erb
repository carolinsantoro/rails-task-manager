<h1>New Task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

   <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Update the Task" %>
<% end %>
<p>Find me in app/views/tasks/new.html.erb</p>
